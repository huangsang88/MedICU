<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="icu.one.mapper.ShiftRecordMapper">

    <resultMap id="ShiftRecordResultMap" type="icu.one.entity.ShiftRecord">
        <id column="shift_id" property="shiftId"/>
        <result column="patient_id" property="patientId"/>
        <result column="shift_time" property="shiftTime"/>
        <result column="shift_type" property="shiftType"/>
        <result column="handover_nurse" property="handoverNurse"/>
        <result column="takeover_nurse" property="takeoverNurse"/>
        <result column="patient_status" property="patientStatus"/>
        <result column="special_notes" property="specialNotes"/>
        <result column="created_time" property="createdTime"/>
    </resultMap>

    <!-- 查询患者交班记录 -->
    <select id="getShiftRecordsByPatientId" resultMap="ShiftRecordResultMap">
        SELECT * FROM shift_records 
        WHERE patient_id = #{patientId} 
        ORDER BY shift_time DESC
    </select>

    <!-- 添加交班记录 -->
    <insert id="addShiftRecord" useGeneratedKeys="true" keyProperty="shiftId">
        INSERT INTO shift_records(
            patient_id,
            shift_time,
            shift_type,
            handover_nurse,
            takeover_nurse,
            patient_status,
            special_notes
        ) VALUES (
            #{patientId},
            #{shiftTime},
            #{shiftType},
            #{handoverNurse},
            #{takeoverNurse},
            #{patientStatus},
            #{specialNotes}
        )
    </insert>
    
    <!-- 查询最近交班记录 -->
    <select id="getLatestShiftRecord" resultMap="ShiftRecordsResultMap">
        SELECT * FROM shift_records 
        WHERE patient_id = #{patientId}
        ORDER BY shift_time DESC 
        LIMIT 1
    </select>
</mapper>
