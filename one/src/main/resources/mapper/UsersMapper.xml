<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="icu.one.mapper.UserMapper">

    <resultMap id="UserResultMap" type="icu.one.entity.User">
        <id column="user_id" property="userId"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="real_name" property="realName"/>
        <result column="role" property="role"/>
        <result column="department" property="department"/>
        <result column="status" property="status"/>
        <result column="created_time" property="createdTime"/>
        <result column="updated_time" property="updatedTime"/>
    </resultMap>

    <!-- 查询所有用户 -->
    <select id="selectAllUsers" resultMap="UserResultMap">
        SELECT * FROM users ORDER BY user_id
    </select>

    <!-- 根据角色查询用户 -->
    <select id="getUsersByRole" resultMap="UserResultMap">
        SELECT * FROM users WHERE role = #{role} AND status = '启用'
    </select>

    <!-- 用户登录验证 -->
    <select id="login" resultMap="UserResultMap">
        SELECT * FROM users 
        WHERE username = #{username} AND password = #{password} AND status = '启用'
    </select>

</mapper>
