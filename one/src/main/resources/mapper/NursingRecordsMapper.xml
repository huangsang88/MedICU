<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="icu.one.mapper.NursingRecordsMapper">

    <resultMap id="NursingRecordsResultMap" type="icu.one.entity.NursingRecords">
        <id column="record_id" property="recordId"/>
        <result column="patient_id" property="patientId"/>
        <result column="record_time" property="recordTime"/>
        <result column="record_type" property="recordType"/>
        <result column="content" property="content"/>
        <result column="nurse_id" property="nurseId"/>
        <result column="signature" property="signature"/>
        <result column="created_time" property="createdTime"/>
    </resultMap>

    <!-- 查询神志相关护理记录 -->
    <select id="getConsciousnessRecords" resultMap="NursingRecordsResultMap">
        SELECT * FROM nursing_records 
        WHERE patient_id = #{patientId} 
        AND content LIKE '%意识%' 
        AND record_time >= DATE_SUB(NOW(), INTERVAL 24 HOUR)
        ORDER BY record_time
    </select>

    <!-- 添加护理记录 -->
    <insert id="addNursingRecord" useGeneratedKeys="true" keyProperty="recordId">
        INSERT INTO nursing_records(
            patient_id, record_time, record_type,
            content, nurse_id, signature
        ) VALUES (
            #{patientId}, #{recordTime}, #{recordType},
            #{content}, #{nurseId}, #{signature}
        )
    </insert>

</mapper>
